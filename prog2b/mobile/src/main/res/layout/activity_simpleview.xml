<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="#000000"
    tools:context="com.example.daniel_li.myapplication.MainActivity">
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="fill_parent"
                    android:id="@+id/df"
                    android:src="@drawable/df"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:text="Senator Dianne Feinstein"
                        android:textSize="20sp"
                        android:textColor="#111"
                        android:textIsSelectable="false"
                        android:layout_marginBottom="16dp"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent" >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:text="Party: D-CA \nEmail: feinstein.senate.gov/public/index.cfm/email-me \nWebsite: feinstein.senate.gov/public\nTweet: Today we reflect on the contributions and leadership of U.S. presidents throughout nation's great history. Happy #President's day"
                            android:textSize="10sp"
                            android:textColor="#111"
                            android:textIsSelectable="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="fill_parent"
                    android:id="@+id/df"
                    android:src="@drawable/df"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:text="Senator Dianne Feinstein"
                        android:textSize="20sp"
                        android:textColor="#111"
                        android:textIsSelectable="false"
                        android:layout_marginBottom="16dp"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent" >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:text="Party: D-CA \nEmail: feinstein.senate.gov/public/index.cfm/email-me \nWebsite: feinstein.senate.gov/public\nTweet: Today we reflect on the contributions and leadership of U.S. presidents throughout nation's great history. Happy #President's day"
                            android:textSize="10sp"
                            android:textColor="#111"
                            android:textIsSelectable="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="fill_parent"
                    android:id="@+id/df"
                    android:src="@drawable/df"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:gravity="center_vertical"
                        android:text="Senator Dianne Feinstein"
                        android:textSize="20sp"
                        android:textColor="#111"
                        android:textIsSelectable="false"
                        android:layout_marginBottom="16dp"/>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent" >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:text="Party: D-CA \nEmail: feinstein.senate.gov/public/index.cfm/email-me \nWebsite: feinstein.senate.gov/public\nTweet: Today we reflect on the contributions and leadership of U.S. presidents throughout nation's great history. Happy #President's day"
                            android:textSize="10sp"
                            android:textColor="#111"
                            android:textIsSelectable="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
</ScrollView>