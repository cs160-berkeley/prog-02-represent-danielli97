<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:textColor="#000000"
    tools:context="com.example.daniel_li.myapplication.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:label="Congressional View"
            android:showAsAction="always"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_weight="10"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="fill_parent"
                    android:id="@+id/d"
                    android:src="@drawable/df"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_height="0dp"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:gravity="center_vertical"
                                android:text="@+id/sen1"
                                android:textSize="20sp"
                                android:textColor="#111"
                                android:textIsSelectable="false"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:drawableTop="@drawable/rightarrow"
                                android:background="@android:color/transparent"
                                android:src="@drawable/rightarrow"
                                android:onClick="detailedView"
                                android:scaleType="fitCenter"
                                android:paddingRight="16dp"
                                android:paddingLeft="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:text="asdf"
                            android:textSize="10sp"
                            android:textColor="#111"
                            android:textIsSelectable="false"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="fill_parent"
                    android:id="@+id/df2"
                    android:src="@drawable/df"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_height="0dp"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:gravity="center_vertical"
                                android:text="@+id/sen2"
                                android:textSize="20sp"
                                android:textColor="#111"
                                android:textIsSelectable="false"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:drawableTop="@drawable/rightarrow"
                                android:background="@android:color/transparent"
                                android:src="@drawable/rightarrow"
                                android:onClick="detailedView"
                                android:scaleType="fitCenter"
                                android:paddingRight="16dp"
                                android:paddingLeft="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent" >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:text="Party: D-CA \nEmail: feinstein.senate.gov/public/index.cfm/email-me \nWebsite: feinstein.senate.gov/public\nTweet: Today we reflect on the contributions and leadership of U.S. presidents throughout nation's great history. Happy #President's day"
                            android:textSize="10sp"
                            android:textColor="#111"
                            android:textIsSelectable="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="fill_parent"
                    android:id="@+id/df"
                    android:src="@drawable/df"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:paddingRight="16dp"
                    android:paddingLeft="16dp"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:visibility="visible">
                    <LinearLayout
                        android:layout_height="0dp"
                        android:layout_width="fill_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3">
                            <TextView
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:gravity="center_vertical"
                                android:text="@+id/rep1"
                                android:textSize="20sp"
                                android:textColor="#111"
                                android:textIsSelectable="false"
                                android:layout_marginBottom="4dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1">
                            <ImageButton
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_weight="2"
                                android:layout_gravity="center"
                                android:drawableTop="@drawable/rightarrow"
                                android:background="@android:color/transparent"
                                android:src="@drawable/rightarrow"
                                android:onClick="detailedView"
                                android:scaleType="fitCenter"
                                android:paddingRight="16dp"
                                android:paddingLeft="16dp"
                                android:paddingTop="16dp"
                                android:paddingBottom="16dp"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="match_parent"
                        android:layout_width="fill_parent" >
                        <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:gravity="center_vertical"
                            android:text="Party: D-CA \nEmail: feinstein.senate.gov/public/index.cfm/email-me \nWebsite: feinstein.senate.gov/public\nTweet: Today we reflect on the contributions and leadership of U.S. presidents throughout nation's great history. Happy #President's day"
                            android:textSize="10sp"
                            android:textColor="#111"
                            android:textIsSelectable="false"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>
</ScrollView>